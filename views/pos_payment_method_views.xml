<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_mpesa" model="ir.ui.view">
      <field name="name">pos.payment.method.form.inherit.mpesa</field>
      <field name="model">pos.payment.method</field>
      <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="mpesa_pos_acquirer_id"
                        attrs="{'invisible': [('use_payment_terminal', '!=', 'mpesa')], 'required': [('use_payment_terminal', '=', 'mpesa')]}"/>
                <!-- <field name="adyen_terminal_identifier" attrs="{'invisible': [('use_payment_terminal', '!=', 'adyen')], 'required': [('use_payment_terminal', '=', 'adyen')]}"/> -->
                <!-- <field name="adyen_test_mode" attrs="{'invisible': [('use_payment_terminal', '!=', 'adyen')]}"/> -->
          </xpath>
      </field>
    </record>
</odoo>